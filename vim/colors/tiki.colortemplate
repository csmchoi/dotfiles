# Default highlight groups {{{
verbatim
if !has('gui_running') && get(g:, '@optionprefix_transp_bg', 0)
endverbatim
    # Transparent background
    Normal latte none
    # See `:help terminal-size-color`
    Terminal latte none
verbatim
else
endverbatim
    # Opaque background
    Normal   latte none
    Terminal latte none
verbatim
endif
endverbatim

